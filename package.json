{
  "name": "azure-actions",
  "description": "A monorepo containing all of the custom GitHub Actions for Azure",
  "private": true,
  "workspaces": [
    "actions/*"
  ],
  "scripts": {
    "all": "npm run format:write && npx lerna run all",
    "build": "npx lerna run package",
    "bundle": "npm run format:write && npx lerna run package",
    "ci": "npm run format:check && npm run lint && npm run ci-test && npm run package",
    "ci-test": "npx lerna run ci-test",
    "clean": "npx lerna run clean --parallel",
    "coverage": "npx lerna run coverage",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx lerna run lint",
    "package": "npx lerna run package",
    "package:watch": "npx lerna run package:watch",
    "test": "npx lerna run test"
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@github/local-action": "^5.2.0",
    "@jest/globals": "^30.1.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.2",
    "lerna": "^8.2.3",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.50.0",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  }
}
