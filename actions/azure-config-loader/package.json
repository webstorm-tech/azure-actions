{
  "name": "azure-config-loader",
  "version": "0.0.0",
  "description": "Loads Azure configuration from a YAML file for GitHub Actions",
  "author": "TJ Cappelletti <20914729+tj-cappelletti@users.noreply.github.com>",
  "homepage": "https://github.com/webstorm-tech/azure-actions#readme",
  "license": "MIT",
  "main": "dist/main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webstorm-tech/azure-actions.git"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config ../../rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "bugs": {
    "url": "https://github.com/webstorm-tech/azure-actions/issues"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
